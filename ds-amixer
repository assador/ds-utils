#!/bin/bash

if [[ $2 ]]; then
	o="$(amixer -c 0 sset $1 $2)"
elif [[ $1 ]]; then
	o="$(amixer -c 0 sset Master $1)"
else
	o="$(amixer -c 0 sget Master)"
fi
